name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name of the input artifact
        type: string

      output_artifact:
        description: Name of the cleaned artifact
        type: string

      output_type:
        description: Type of the cleaned artifact
        type: string

      output_description:
        description: Description of the cleaned artifact
        type: string

      min_price:
        description: Minimum Price to consider
        type: string

      max_price:
        description: Maximum Price to consider
        type: string


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
